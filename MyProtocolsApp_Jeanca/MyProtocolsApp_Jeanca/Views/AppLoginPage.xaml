<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyProtocolsApp_Jeanca.Views.AppLoginPage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="BlanchedAlmond"
             BackgroundImageSource="LoginIcon">
             
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="50, 25, 50, 25">


            <Entry x:Name="TxtUserName" Placeholder="Email" FontSize="30" Keyboard="Email" TextColor="#021078" />
            <Entry x:Name="TxtPassword" Placeholder="Password" FontSize="30" Keyboard="Default" IsPassword="True" TextColor="#0D299D" />

            <Switch x:Name="SwShowPassword" IsToggled="False" Toggled="SwShowPassword_Toggled" />

            <Button x:Name="BtnLogin" Text="LOGIN" BackgroundColor="Green" CornerRadius="15" Clicked="BtnLogin_Clicked" />

            <Button x:Name="BtnSignUp" Text="SIGN UP" BackgroundColor="Blue" CornerRadius="15" Clicked="BtnSignUp_Clicked"/>

            <Label x:Name="LblPasswordRecovery" Text="Password Recovery..."/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>